<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFECB3">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFECB3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NEWS CHANNELS"
            android:textSize="30sp"
            android:textAlignment="center"
            android:background="#18FFFF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFECB3">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:src="@drawable/abp"/>
            <Button
                android:text="ABP NEWS"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:textSize="20sp"
                android:textColor="#424242"
                android:onClick="abp">
            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFECB3">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:src="@drawable/aajtak"/>
            <Button
                android:text="AAJ TAK"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:textSize="20sp"
                android:textColor="#424242"
                android:onClick="aajtak">
            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFECB3">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:src="@drawable/doordarshan"/>
            <Button
                android:text="DOORDARSHAN"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:textSize="20sp"
                android:textColor="#424242"
                android:onClick="doordarshan">
            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFECB3">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:src="@drawable/indiatv"/>
            <Button
                android:text="INDIA TV"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:textSize="20sp"
                android:textColor="#424242"
                android:onClick="indiatv">
            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFECB3">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:src="@drawable/ndtv"/>
            <Button
                android:text="NDTV"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:textSize="20sp"
                android:textColor="#424242"
                android:onClick="ndtv">
            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFECB3">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:src="@drawable/newsnation"/>
            <Button
                android:text="NEWS NATION"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:textSize="20sp"
                android:textColor="#424242"
                android:onClick="newsnation">
            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFECB3">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:src="@drawable/zeenews"/>
            <Button
                android:text="ZEE NEWS"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:textSize="20sp"
                android:textColor="#424242"
                android:onClick="zeenews">
            </Button>

        </LinearLayout>



    </LinearLayout>

</ScrollView>